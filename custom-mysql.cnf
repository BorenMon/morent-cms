[mysqld]
# Allocate 400GB to the InnoDB buffer pool (roughly 80% of total RAM)
innodb_buffer_pool_size=400G

# Other memory-related optimizations
innodb_log_file_size=4G
innodb_log_buffer_size=512M
max_connections=1000
thread_cache_size=128
table_open_cache=4000
query_cache_size=0
query_cache_type=0

# Allow MySQL to use up to 512GB of RAM
innodb_flush_method=O_DIRECT
